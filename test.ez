# ===================================================================
# Example 10: All Operators Test
# ===================================================================

start() begin
    num a = 10
    num b = 3
    num result
    
    result = a + b
    show("Addition: ", result)
    
    result = a - b
    show("Subtraction: ", result)
    
    result = a * b
    show("Multiplication: ", result)
    
    result = a / b
    show("Division: ", result)
    
    result = a % b
    show("Modulus: ", result)
    
    check (a > b) begin
        show("a is greater than b")
    end
    
    check (a >= b) begin
        show("a is greater than or equal to b")
    end
    
    check (a < b) begin
        show("a is less than b")
    end
    
    check (a <= b) begin
        show("a is less than or equal to b")
    end
    
    check (a differs b) begin
        show("a is not equal to b")
    end
    
    send 0
end